<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.platformer.controller.MainMenuController"
            prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-image: url('/static/mainpage2.png'); -fx-background-size: cover;">
    <!-- Set header section -->
    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Label text="Welcome to the Game">
            <font>
                <Font name="Arial Bold" size="36" />
            </font>
        </Label>
    </VBox>

    <!-- Set button section -->
    <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="300" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Button text="Start" onAction="#Start" prefWidth="300" prefHeight="30" />
        <Button text="Options" onAction="#Options" prefWidth="300" prefHeight="30" />
        <Button text="Info" onAction="#Info" prefWidth="300" prefHeight="30" />
        <Button text="Select Level" onAction="#SelectLevel" prefWidth="300" prefHeight="30" />
        <Button text="Leaderboard" onAction="#ShowLeaderboard" prefWidth="300" prefHeight="30" />
        <Button text="Exit" onAction="#Exit" prefWidth="300" prefHeight="30" />
    </VBox>
</AnchorPane>
