<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="600" maxWidth="400" minHeight="600" minWidth="400" prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="multiplewindows.SecondaryController">
   <center>
      <VBox alignment="CENTER" prefHeight="600.0" prefWidth="400.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="label" text="Secondary View" textFill="RED">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <Button fx:id="button" mnemonicParsing="false" onAction="#switchOnClicked" text="Switch to Primary View" textFill="BLUE">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
